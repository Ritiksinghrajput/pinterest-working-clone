<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="../images/image.png"/>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <title>Profile</title>
  </head>
  <body>
   <div class="contain-ner">
    <div class="profile-card">
  <div class="profile-image">
    <img src="/images/ritik.jpg" alt="User" />
  </div>
  <h2 class="name"><%= user.fullName %></h2>
  <h3 class="username">@<%= user.username %></h3>
  <p class="descriotion">Backend Developer</p>

  <a href="/logout" class="button">Logout</a>

  
<form action="/upload" method="post" enctype="multipart/form-data">
  <input type="text" class="filecaption" placeholder="some caption..."/>
  <input type="file" name="file" />
  <input type="submit">

</form>

  <div class="social-icons">
    <a href="#"><i class="fab fa-facebook-f"></i></a>
  </div>
  </div>
  </div>
  <div class="container">
    <div class="cards">
      <% user.posts.forEach(function(post){ %> 

        <div class="card" style="width: 18rem;">
  <img src="/images/uploads<%=post.image %>" 
  class="card-img-top" alt="<i class="fa fa-user-times" aria-hidden="true"></i>
  <div class="card-body">
    <a href="#" class="btn-Ad">All designs</a>
  </div>
  </div>
        <% }) %>
    </div>
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>